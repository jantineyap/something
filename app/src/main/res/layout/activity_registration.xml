<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.teamanything.goonsquad.RegistrationActivity"
    android:background="#ad6b9fd1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/registration_requirements"
        android:padding="8dp"
        android:id="@+id/textView"
        android:gravity="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/email_form"
        android:padding="8dp"
        android:hint="@string/prompt_email"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/name_form"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_form"
        android:inputType="text"
        android:padding="8dp"
        android:singleLine="true"
        android:hint="@string/prompt_username"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/password_form"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:padding="8dp"
        android:id="@+id/password_form"
        android:hint="@string/prompt_password"
        android:imeOptions="actionNext"
        android:nextFocusForward="@+id/password_confirm_form"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_confirm_form"
        android:hint="@string/prompt_password_confirm"
        android:imeOptions="actionDone"
        android:textColor="#000000"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/action_cancel"
            android:layout_weight="50"
            android:id="@+id/button_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@drawable/button"
            android:textColor="#000000"
            android:layout_marginRight="2.5dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/action_sign_in_short"
            android:layout_weight="50"
            android:id="@+id/button_register"
            style="?android:attr/buttonBarButtonStyle"
            android:background="@drawable/button"
            android:textColor="#000000"
            android:layout_marginLeft="2.5dp" />



    </LinearLayout>
</LinearLayout>
